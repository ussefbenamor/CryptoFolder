<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/activity_purchase_root"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="com.nafaaazaiez.cryptofolder.view.activity.PurchaseActivity">

  <LinearLayout
    android:id="@+id/activity_purchase_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingLeft="@dimen/dimen_4dp"
    android:paddingRight="@dimen/dimen_4dp"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">
    <ImageView
      android:layout_width="@dimen/dimen_0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_gravity="start"
      android:paddingTop="@dimen/dimen_16dp"
      android:paddingBottom="@dimen/dimen_16dp"
      android:contentDescription="@string/close_purchase_description"
      android:focusable="true"
      android:foreground="?android:attr/selectableItemBackground"
      android:onClick="close"
      app:srcCompat="@drawable/ic_close"/>
    <TextView
      android:id="@+id/activity_purchase_tv_title"
      android:layout_width="@dimen/dimen_0dp"
      android:layout_height="wrap_content"
      android:layout_weight="5"
      android:paddingTop="@dimen/dimen_16dp"
      android:paddingBottom="@dimen/dimen_16dp"
      android:text="@string/add_new_purchase"
      android:textAlignment="center"
      android:textColor="@android:color/white"
      android:textSize="18sp"/>
    <ImageView
      android:layout_width="@dimen/dimen_0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_gravity="end"
      android:paddingTop="@dimen/dimen_16dp"
      android:paddingBottom="@dimen/dimen_16dp"
      android:contentDescription="@string/complete_purchase_description"
      android:focusable="true"
      android:foreground="?android:attr/selectableItemBackground"
      android:onClick="complete"
      app:srcCompat="@drawable/ic_confirm"/>
  </LinearLayout>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/dimen_16dp"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
          android:id="@+id/activity_purchase_image_circle_background"
          android:layout_width="@dimen/dimen_72dp"
          android:layout_height="@dimen/dimen_72dp"
          android:background="@drawable/ic_circle_white"
          android:gravity="center">

          <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/activity_purchase_image_select"
            android:layout_width="@dimen/dimen_36dp"
            android:layout_height="@dimen/dimen_36dp"
            android:contentDescription="@string/add_purchase_coin"
            android:onClick="coinPicker"
            app:srcCompat="@drawable/ic_add_primary"/>
        </LinearLayout>

        <TextView
          android:id="@+id/activity_purchase_text_select_coin"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/dimen_8dp"
          android:onClick="coinPicker"
          android:text="@string/select_a_coin"
          android:textAlignment="center"
          android:textColor="@android:color/white"
          android:textSize="@dimen/dimen_18sp"/>
      </LinearLayout>
      <ProgressBar
        android:id="@+id/activity_purchase_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:indeterminate="true"
        android:visibility="invisible"/>
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/dimen_16dp"
          android:paddingBottom="@dimen/dimen_24dp"
          android:orientation="vertical"
          android:soundEffectsEnabled="true"
          android:visibility="visible">

          <android.support.design.widget.TextInputLayout
            android:id="@+id/activity_purchase_input_layout_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
              android:id="@+id/activity_purchase_input_amount"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:drawableLeft="@drawable/ic_sum"
              android:drawablePadding="@dimen/dimen_8dp"
              android:drawableStart="@drawable/ic_sum"
              android:hint="@string/amount"
              android:inputType="numberDecimal|number"/>
          </android.support.design.widget.TextInputLayout>
          <android.support.design.widget.TextInputLayout
            android:id="@+id/purchase_activity_input_layout_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
              android:id="@+id/activity_purchase_input_price"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:drawableLeft="@drawable/ic_money"
              android:drawablePadding="@dimen/dimen_8dp"
              android:drawableStart="@drawable/ic_money"
              android:hint="@string/unit_price"
              android:inputType="numberDecimal|number"/>
          </android.support.design.widget.TextInputLayout>
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="@dimen/dimen_8dp"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:hint="@string/total_purchase"/>
            <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="end"
              android:orientation="horizontal">
              <TextView
                android:id="@+id/activity_purchase_text_total"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/dimen_22sp"/>
              <TextView
                android:id="@+id/activity_purchase_text_total_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:gravity="end"
                android:hint="@string/currency_dollar"
                android:textAlignment="textEnd"
                />
            </LinearLayout>

          </LinearLayout>
          <android.support.design.widget.TextInputLayout
            android:id="@+id/purchase_activity_input_layout_platform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
              android:id="@+id/activity_purchase_input_platform"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:drawableLeft="@drawable/ic_platform"
              android:drawablePadding="@dimen/dimen_8dp"
              android:drawableStart="@drawable/ic_platform"
              android:hint="@string/platform"
              android:inputType="text"/>
          </android.support.design.widget.TextInputLayout>
          <android.support.design.widget.TextInputLayout
            android:id="@+id/activity_purchase_input_layout_purchase_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
              android:id="@+id/activity_purchase_input_purchase_date"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:drawableLeft="@drawable/ic_calender"
              android:drawablePadding="8dp"
              android:drawableStart="@drawable/ic_calender"
              android:hint="@string/purchase_date"
              android:inputType="none"
              android:textIsSelectable="true"/>

          </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
          android:id="@+id/activity_purchase_disable_form"
          android:layout_width="match_parent"
          android:layout_height="400dp"
          android:paddingTop="@dimen/dimen_12dp"
          android:orientation="vertical"
          android:soundEffectsEnabled="true"
          android:visibility="gone">
          <ImageView
            android:layout_width="@dimen/dimen_72dp"
            android:layout_height="@dimen/dimen_72dp"
            android:layout_gravity="center"
            android:contentDescription="@string/first_select_a_coin"
            app:srcCompat="@drawable/ic_arrow_upward_white_24dp"/>
          <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="@string/first_select_a_coin"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_28sp"/>
        </LinearLayout>
      </RelativeLayout>

    </LinearLayout>
  </ScrollView>
</LinearLayout>