<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">
  <!-- A CardView that contains a TextView -->

  <android.support.v7.widget.CardView
    android:id="@+id/row_purchase_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_16dp"
    android:layout_marginLeft="@dimen/dimen_16dp"
    android:layout_marginRight="@dimen/dimen_16dp"
    android:layout_gravity="center"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/dimen_2dp"
    card_view:cardElevation="@dimen/dimen_4dp">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="@dimen/dimen_8dp"
      android:paddingBottom="@dimen/dimen_8dp"
      android:paddingLeft="@dimen/dimen_8dp"
      android:orientation="vertical">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/dimen_16dp"
          android:layout_marginBottom="@dimen/dimen_16dp"
          android:layout_marginLeft="@dimen/dimen_8dp"
          android:layout_marginRight="42dp"
          android:baselineAligned="false"
          android:orientation="horizontal">
          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginEnd="@dimen/dimen_16dp"
              android:layout_marginRight="@dimen/dimen_16dp"
              android:layout_gravity="center"
              android:background="@color/grey_75"
              android:gravity="center_vertical"
              card_view:cardBackgroundColor="@color/grey_b1"
              card_view:cardCornerRadius="@dimen/dimen_8dp">

              <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                >
                <TextView
                  android:id="@+id/row_purchase_amount_value"
                  android:textStyle="bold"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/dimen_8dp"
                  android:layout_marginRight="@dimen/dimen_8dp"
                  android:maxLines="1"
                  android:text="@string/amount_value"
                  android:textColor="@android:color/white"
                  android:textSize="@dimen/dimen_20sp"/>
                <TextView
                  android:id="@+id/row_purchase_amount_currency"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="@dimen/dimen_8dp"
                  android:layout_marginRight="@dimen/dimen_8dp"
                  android:maxLines="1"
                  android:text="@string/cryptocoin_abbr"
                  android:textColor="@android:color/white"
                  android:textSize="@dimen/dimen_16sp"/>

              </LinearLayout>

            </android.support.v7.widget.CardView>
          </LinearLayout>
          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@color/grey_f9"
              android:gravity="center_vertical"
              card_view:cardBackgroundColor="@color/grey_f9"
              card_view:cardCornerRadius="@dimen/dimen_8dp">

              <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                  android:id="@+id/row_purchase_total_price_value"
                  android:textStyle="bold"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/dimen_8dp"
                  android:layout_marginRight="@dimen/dimen_8dp"
                  android:maxLines="1"
                  android:text="@string/total_value"
                  android:textSize="@dimen/dimen_20sp"/>
                <TextView
                  android:id="@+id/row_purchase_total_price_currency"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="@dimen/dimen_8dp"
                  android:layout_marginRight="@dimen/dimen_8dp"
                  android:maxLines="1"
                  android:text="@string/currency_dollar"
                  android:textSize="@dimen/dimen_16sp"/>

              </LinearLayout>


            </android.support.v7.widget.CardView>

          </LinearLayout>
        </LinearLayout>
        <ImageView
          android:id="@+id/row_purchase_img_more_options"
          android:layout_width="42dp"
          android:layout_height="42dp"
          android:layout_marginTop="@dimen/dimen_8dp"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:padding="@dimen/dimen_8dp"
          android:contentDescription="@string/purchase_options"
          android:scaleType="centerCrop"
          card_view:srcCompat="@drawable/ic_more_options"/>

      </RelativeLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:orientation="horizontal">

        <TextView
          android:layout_width="@dimen/dimen_0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:gravity="center"
          android:text="@string/unit_price_big"
          android:textColor="@color/colorTextSecondary"
          android:textSize="@dimen/dimen_12sp"/>
        <TextView
          android:layout_width="@dimen/dimen_0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center"
          android:text="@string/x"
          android:textColor="@color/colorTextSecondary"
          android:textSize="@dimen/dimen_12sp"/>

        <TextView
          android:layout_width="@dimen/dimen_0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:gravity="center"
          android:text="@string/amount"
          android:textColor="@color/colorTextSecondary"
          android:textSize="@dimen/dimen_12sp"/>
        <TextView
          android:layout_width="@dimen/dimen_0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center"
          android:text="@string/_eq"
          android:textColor="@color/colorTextSecondary"
          android:textSize="@dimen/dimen_12sp"/>
        <TextView
          android:layout_width="@dimen/dimen_0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:gravity="center"
          android:text="@string/total"
          android:textColor="@color/colorTextSecondary"
          android:textSize="@dimen/dimen_12sp"/>
      </LinearLayout>

      <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:background="@color/colorDivider"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_4dp"
        android:paddingBottom="@dimen/dimen_4dp"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp"
        android:orientation="horizontal">
        <LinearLayout
          android:layout_width="@dimen/dimen_0dp"
          android:layout_height="match_parent"
          android:layout_weight="3"
          android:gravity="center">

          <TextView
            android:id="@+id/row_purchase_unit_price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/dimen_2dp"
            android:paddingRight="@dimen/dimen_2dp"
            android:text="@string/min_value"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_12sp"
            tools:ignore="RtlSymmetry"/>

          <TextView
            android:id="@+id/row_purchase_unit_price_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currency_dollar"
            android:textSize="@dimen/dimen_12sp"/>
        </LinearLayout>
        <TextView
          android:layout_width="@dimen/dimen_0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center"
          android:text="@string/x"
          android:textColor="@color/colorTextSecondary"/>
        <LinearLayout
          android:layout_width="@dimen/dimen_0dp"
          android:layout_height="match_parent"
          android:layout_weight="3"
          android:gravity="center">
          <TextView
            android:id="@+id/row_purchase_amount_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/dimen_2dp"
            android:paddingRight="@dimen/dimen_2dp"
            android:text="@string/amount_value"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_12sp"
            tools:ignore="RtlSymmetry"/>

        </LinearLayout>
        <TextView
          android:layout_width="@dimen/dimen_0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center"
          android:text="@string/_eq"
          android:textColor="@color/colorTextSecondary"/>
        <LinearLayout
          android:layout_width="@dimen/dimen_0dp"
          android:layout_height="match_parent"
          android:layout_weight="3"
          android:gravity="center">
          <TextView
            android:id="@+id/row_purchase_total_price_value_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/dimen_2dp"
            android:paddingRight="@dimen/dimen_2dp"
            android:text="@string/total_value"
            android:textColor="@color/colorGreen"
            android:textSize="@dimen/dimen_12sp"
            tools:ignore="RtlSymmetry"/>
          <TextView
            android:id="@+id/row_purchase_total_price_currency_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currency_dollar"
            android:textSize="@dimen/dimen_12sp"
            />
        </LinearLayout>
      </LinearLayout>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:gravity="center"
        android:orientation="horizontal">
        <View
          android:layout_width="0dp"
          android:layout_height="1px"
          android:layout_weight="9"
          android:background="@color/colorDivider"/>

      </LinearLayout>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:layout_marginBottom="@dimen/dimen_4dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:gravity="end"
        android:orientation="horizontal">
        <TextView
          android:id="@+id/row_purchase_platform"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="@dimen/dimen_4dp"
          android:layout_marginRight="@dimen/dimen_4dp"
          android:layout_gravity="end"
          android:text="@string/platform"
          android:textColor="@color/colorTextPrimary"/>
        <TextView
          android:id="@+id/row_purchase_purchase_date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="end|bottom"
          android:text="@string/_2_days_ago"
          android:textColor="@color/colorTextSecondary"
          android:textSize="@dimen/dimen_12sp"/>
      </LinearLayout>

    </LinearLayout>
  </android.support.v7.widget.CardView>
</LinearLayout>


