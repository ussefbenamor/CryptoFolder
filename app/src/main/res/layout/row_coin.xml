<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">
  <!-- A CardView that contains a TextView -->

  <android.support.v7.widget.CardView
    android:id="@+id/row_coin_card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_16dp"
    android:layout_marginLeft="@dimen/dimen_16dp"
    android:layout_marginRight="@dimen/dimen_16dp"
    android:layout_gravity="center"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/dimen_2dp"
    card_view:cardElevation="@dimen/dimen_4dp">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_16dp"
        android:orientation="horizontal">

        <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="@dimen/dimen_16dp"
          android:layout_marginRight="@dimen/dimen_16dp">

          <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/row_coin_img_head_coin"
            android:layout_width="@dimen/dimen_42dp"
            android:layout_height="@dimen/dimen_42dp"
            android:src="@drawable/btc"/>


        </RelativeLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:baselineAligned="false"
          android:orientation="horizontal">

          <LinearLayout
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
              android:id="@+id/row_coin_tv_head_name"
              android:textStyle="bold"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:maxLines="1"
              android:text="@string/cryptocoin_name"
              android:textColor="@color/colorTextPrimary"
              android:textSize="@dimen/dimen_16sp"/>

            <TextView
              android:id="@+id/row_coin_tv_head_abbr"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/cryptocoin_abbr"
              android:textColor="@color/colorTextSecondary"
              android:textSize="@dimen/dimen_16sp"/>

          </LinearLayout>
          <LinearLayout
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@color/dark_grey"
              android:gravity="center_vertical"
              card_view:cardBackgroundColor="@color/dark_grey"
              card_view:cardCornerRadius="@dimen/dimen_8dp"
              >
              <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                  android:id="@+id/row_coin_tv_head_amount"
                  android:textStyle="bold"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="@dimen/dimen_8dp"
                  android:layout_marginEnd="@dimen/dimen_8dp"
                  android:layout_marginLeft="@dimen/dimen_8dp"
                  android:layout_marginRight="@dimen/dimen_8dp"
                  android:maxLines="1"
                  android:text="@string/amount_value"
                  android:textColor="@android:color/white"
                  android:textSize="@dimen/dimen_20sp"/>
                <TextView
                  android:id="@+id/row_coin_tv_head_amount_currency"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="@dimen/dimen_8dp"
                  android:layout_marginRight="@dimen/dimen_8dp"
                  android:maxLines="1"
                  android:text="@string/cryptocoin_abbr"
                  android:textColor="@android:color/white"
                  android:textSize="@dimen/dimen_16sp"/>

              </LinearLayout>

            </android.support.v7.widget.CardView>
            <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:orientation="horizontal"
              >

              <TextView
                android:id="@+id/row_coin_tv_head_actual_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/dimen_2dp"
                android:paddingRight="@dimen/dimen_2dp"
                android:text="@string/actual_price_value"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimen_20sp"
                tools:ignore="RtlSymmetry"/>
              <TextView
                android:id="@+id/row_coin_tv_head_actual_total_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/currency_dollar"
                android:textSize="@dimen/dimen_12sp"/>
            </LinearLayout>
          </LinearLayout>


        </LinearLayout>
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp"
        android:orientation="horizontal">
        <TextView
          android:layout_width="@dimen/dimen_0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="start"/>

        <TextView
          android:layout_width="@dimen/dimen_0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:gravity="right"
          android:text="@string/purchase"
          android:textColor="@color/colorTextSecondary"
          android:textSize="@dimen/dimen_12sp"/>

        <TextView
          android:layout_width="@dimen/dimen_0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:gravity="right"
          android:text="@string/actual"
          android:textColor="@color/colorTextSecondary"
          android:textSize="@dimen/dimen_12sp"/>

        <TextView
          android:layout_width="@dimen/dimen_0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:gravity="end"
          android:text="@string/gain_loss"
          android:textColor="@color/colorTextSecondary"
          android:textSize="@dimen/dimen_12sp"/>

      </LinearLayout>
      <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:background="@color/colorDivider"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_4dp"
        android:paddingBottom="@dimen/dimen_4dp"
        android:paddingLeft="@dimen/dimen_8dp"
        android:paddingRight="@dimen/dimen_8dp"
        android:orientation="horizontal">
        <TextView
          android:layout_width="@dimen/dimen_0dp"
          android:layout_height="match_parent"
          android:layout_weight="3"
          android:layout_marginRight="@dimen/dimen_4dp"
          android:layout_gravity="start"
          android:text="@string/unit_price"
          android:textColor="@color/colorTextSecondary"

          android:textSize="@dimen/dimen_12sp"/>
        <LinearLayout
          android:layout_width="@dimen/dimen_0dp"
          android:layout_height="match_parent"
          android:layout_weight="5"
          android:gravity="right|center_vertical">

          <TextView
            android:id="@+id/row_coin_tv_body_purchase_unit_price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/dimen_2dp"
            android:paddingRight="@dimen/dimen_2dp"
            android:text="@string/min_value"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_12sp"
            tools:ignore="RtlSymmetry"/>
          <TextView
            android:id="@+id/row_coin_tv_body_purchase_unit_price_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currency_dollar"
            android:textSize="@dimen/dimen_12sp"/>
        </LinearLayout>
        <LinearLayout
          android:layout_width="@dimen/dimen_0dp"
          android:layout_height="match_parent"
          android:layout_weight="5"

          android:gravity="right|center_vertical">

          <TextView
            android:id="@+id/row_coin_tv_body_actual_unit_price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/dimen_2dp"
            android:paddingRight="@dimen/dimen_2dp"
            android:text="@string/min_value"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_12sp"
            tools:ignore="RtlSymmetry"/>
          <TextView
            android:id="@+id/row_coin_tv_body_actual_unit_price_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currency_dollar"
            android:textSize="@dimen/dimen_12sp"/>
        </LinearLayout>
        <LinearLayout
          android:layout_width="@dimen/dimen_0dp"
          android:layout_height="match_parent"
          android:layout_weight="5"
          android:gravity="end|center_vertical">
          <TextView
            android:id="@+id/row_coin_tv_body_gl_unit_price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/dimen_2dp"
            android:paddingRight="@dimen/dimen_2dp"
            android:text="@string/min_value"
            android:textColor="@color/colorGreen"
            android:textSize="@dimen/dimen_12sp"
            tools:ignore="RtlSymmetry"/>
          <TextView
            android:id="@+id/row_coin_tv_body_gl_unit_price_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currency_dollar"
            android:textSize="@dimen/dimen_12sp"

            />
        </LinearLayout>

      </LinearLayout>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:gravity="center"
        android:orientation="horizontal">
        <View
          android:layout_width="@dimen/dimen_0dp"
          android:layout_height="1px"

          android:layout_weight="9"
          android:background="@color/colorDivider"/>
        <TextView
          android:id="@+id/row_coin_tv_body_gl_percentage"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_gravity="end"
          android:gravity="end"
          android:text="@string/_20"
          android:textColor="@color/colorTextSecondary"
          android:textSize="@dimen/dimen_12sp"/>

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_4dp"
        android:paddingBottom="@dimen/dimen_8dp"
        android:paddingLeft="@dimen/dimen_8dp"
        android:paddingRight="@dimen/dimen_8dp"
        android:orientation="horizontal">

        <TextView
          android:layout_width="@dimen/dimen_0dp"
          android:layout_height="match_parent"
          android:layout_weight="3"
          android:layout_marginRight="@dimen/dimen_4dp"
          android:layout_gravity="start"
          android:text="@string/total_price"
          android:textColor="@color/colorTextSecondary"
          android:textSize="@dimen/dimen_12sp"/>
        <LinearLayout
          android:layout_width="@dimen/dimen_0dp"
          android:layout_height="match_parent"
          android:layout_weight="5"
          android:gravity="right|center_vertical">
          <TextView
            android:id="@+id/row_coin_tv_body_purchase_total_price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/dimen_2dp"
            android:paddingRight="@dimen/dimen_2dp"
            android:text="@string/min_value"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_12sp"
            tools:ignore="RtlSymmetry"/>
          <TextView
            android:id="@+id/row_coin_tv_body_purchase_total_price_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/dimen_2dp"
            android:paddingRight="@dimen/dimen_2dp"
            android:text="@string/currency_dollar"
            android:textSize="@dimen/dimen_12sp"
            tools:ignore="RtlSymmetry"/>
        </LinearLayout>
        <LinearLayout
          android:layout_width="@dimen/dimen_0dp"
          android:layout_height="match_parent"
          android:layout_weight="5"
          android:gravity="right|center_vertical">
          <TextView
            android:id="@+id/row_coin_tv_body_actual_total_price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/dimen_2dp"
            android:paddingRight="@dimen/dimen_2dp"
            android:text="@string/min_value"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_12sp"
            tools:ignore="RtlSymmetry"/>
          <TextView
            android:id="@+id/row_coin_tv_body_actual_total_price_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currency_dollar"
            android:textSize="@dimen/dimen_12sp"/>
        </LinearLayout>
        <LinearLayout
          android:layout_width="@dimen/dimen_0dp"
          android:layout_height="match_parent"
          android:layout_weight="5"
          android:gravity="end|center_vertical">
          <TextView
            android:id="@+id/row_coin_tv_body_gl_total_price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/dimen_2dp"
            android:paddingRight="@dimen/dimen_2dp"
            android:text="@string/min_value"
            android:textColor="@color/colorGreen"
            android:textSize="@dimen/dimen_12sp"
            tools:ignore="RtlSymmetry"/>
          <TextView
            android:id="@+id/row_coin_tv_body_gl_total_price_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currency_dollar"
            android:textSize="@dimen/dimen_12sp"
            />
        </LinearLayout>

      </LinearLayout>

    </LinearLayout>
  </android.support.v7.widget.CardView>
</LinearLayout>


